<% remote_form_for :twitterati, plugin_module, :url => admin_twitterati_path(plugin_module), :html => { :method => :put } do |f| %>
  <div class='fullwidth'>
    <table class='form-table'>
      <%= form_row "Username", text_field_tag("settings[username]", plugin_module.settings[:username]) -%>
      <%= form_row "Height", text_field_tag("settings[height]", plugin_module.settings[:height]) -%>
      <%= form_row "Width", text_field_tag("settings[width]", plugin_module.settings[:width]) -%>
      <%= form_row "Border", text_field_tag("settings[border]", plugin_module.settings[:border]) -%>
      <%= form_row "Background", text_field_tag("settings[background]", plugin_module.settings[:background]) -%>
      <%= form_row "evenBackground", text_field_tag("settings[evenBackground]", plugin_module.settings[:evenBackground]) -%>
    </table>
  </div>
  <br />
  <%= submit_tag "Update Twitterati" %>
<% end %>
